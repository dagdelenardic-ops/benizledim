Options -MultiViews -Indexes

# Prefer PHP 8.2 on cPanel (ea-php first, alt-php fallback if available).
<IfModule mime_module>
    AddHandler application/x-httpd-ea-php82 .php .php8 .phtml
    AddHandler application/x-httpd-alt-php82 .php .php8 .phtml
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS (works with reverse proxies too).
    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Skip rewrite when request already points to public.
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^ - [L]

    # Serve Laravel from public/ without changing visible URL.
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
